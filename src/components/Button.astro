---
const {title, variant} = Astro.props;
---
<button class={variant}>{title}</button>
<style>
    button{
        padding: 1rem;
        border: none;
        border-radius: 5px;
        background-color: green;
    }
    .primary{
        background-color: blue;
    }
    .secondary {
        background-color: cornflowerblue;
    }
</style>